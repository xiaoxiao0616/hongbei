.nav{width:100%;background: #000000;}
/*box1页面开始*/
.tab1{background:#663fc0; background-size: 100%;padding:6% 0 8%;}
.tab1 ul{margin-top:5%;width: 100%;}
.tab1 ul li{border: 1px solid red;border-radius: 5px;margin-top: 5%;position: relative;color: #fff;padding: 4% 0;}
.tab1 ul li span{position: absolute;top:-15%;left: 2%; padding:3% 6% 3.8%;background: #CB3B45;border-radius: 5px;font-size: 1.2em;}
.tab1 ul li .span3{ padding:5% 6%  5.8%;}
.tab1 ul li p{font-size: 1em;margin-left: 32%;padding-right: 2%;}

.tab .w-1{
    width: 100%;
    background: #215ad9;
    height: 2em;
    text-align: center;
    padding: 6px;
    display: table;
    vertical-align: inherit;
    color: #fff;

}
.tab .w-1 span{
    display: inline-block;
}
.info-main{
    width: 100%;
    height: 2em;
    text-align: center;
    display: table;
    vertical-align: inherit;
}
.info-main ul.infoList{
    float: left;
    width: 100%;
}
.bd-01 ul li{
    float: left;
    width: 100%;
    padding: 20px;
    display: table;
    vertical-align: inherit;
    text-align: center;
}
ul.infoList>li>span{
    display: inline-block;
    height: 2.4em;
    line-height: 2.4em;
}
.info-main ul li:nth-child(odd){
    background: #ffff;
}
.info-main ul li:nth-child(even){
    background: #f9f9f9;
}


.banner,.message,shizhi_main{
    display:flex;
    overflow:hidden;
}
.banner img{
    width: 100%;
    height: auto;
}
.next{
    margin: 5px auto;
}
.mtop{
    margin: 20px auto 10px auto;
}
.shizi h2{font-size: 1.4em;;text-align: center;color: #f9f9f9;padding: 10px;margin-top: 10px}
.xy-main{
    width: 100%;
    background: #663fc0 url("../images/xy-bg.png") no-repeat 16px center;
    padding: 10px;
}
.xy-main h2{font-size: 1.4em;color: #ffc002;line-height: 30px;text-align: center}
.xy-main h4{text-align: center}
.marquee div {
    display: block;
    width: 100%;
    text-align: center;
    position: absolute;
    overflow: hidden;
    -webkit-animation: marquee 15s linear infinite;
    animation: marquee 15s linear infinite;
}
@keyframes marquee {
    0% {
        transform: translateX(0);
    }
    100% {
        transform: translateX(-550px); // 每行高50
    }
}